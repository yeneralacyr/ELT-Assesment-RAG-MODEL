<body>
    <div class="container">
        <h1>RAG Soru-Cevap Sistemi</h1>
        <div class="input-group">
            <textarea id="question" placeholder="Sorunuzu buraya yazın..."></textarea>
        </div>
        <div class="input-group" style="display: flex; align-items: center;">
            <button id="submit">Gönder</button>
            <div id="loader" class="loader" style="display: none;"></div>
        </div>
        <div id="answer"></div>
    </div>

    <script>
        $(document).ready(function() {
            $('#submit').click(function() {
                var question = $('#question').val().trim();
                var $answer = $('#answer');
                var $loader = $('#loader');

                if (question === "") {
                    $answer.text("Lütfen bir soru girin.");
                    return;
                }

                $answer.text("");
                $loader.show();

                $.ajax({
                    url: '/query',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ question: question }),
                    success: function(response) {
                        $loader.hide();
                        if(response.answer){
                            $answer.text(response.answer);
                        } else {
                            $answer.text("Bir hata oluştu. Lütfen tekrar deneyin.");
                        }
                    },
                    error: function() {
                        $loader.hide();
                        $answer.text("Sunucuya bağlanırken bir hata oluştu.");
                    }
                });
            });

            // Enter tuşuyla gönderme
            $('#question').keypress(function(e) {
                if (e.which == 13 && !e.shiftKey) {
                    e.preventDefault();
                    $('#submit').click();
                }
            });
        });
    </script>
</body>
